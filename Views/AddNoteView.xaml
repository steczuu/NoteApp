<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteApp.Views.AddNoteView"
             Title="">
    <VerticalStackLayout>
        <Label Text="Add note:" FontSize="Header" Margin="10,20,0,0"/>
        
        <HorizontalStackLayout>
            <Entry Placeholder="Enter title" Text="" Margin="10,20,0,0" MaximumWidthRequest="270" 
                  MinimumWidthRequest="270" HorizontalOptions="Start"/>

            <Picker Margin="50,0,0,0" MinimumWidthRequest="200" MaximumHeightRequest="50"/>
        </HorizontalStackLayout>
        
        <Editor Margin="10,20,0,0" MinimumWidthRequest="1000" MaximumWidthRequest="1000" 
                MaximumHeightRequest="500" MinimumHeightRequest="500" Placeholder="Enter note" HorizontalOptions="Start"/>
    </VerticalStackLayout>
</ContentPage>